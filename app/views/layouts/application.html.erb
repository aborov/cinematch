<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= render "shared/meta_tags" %>
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield(:head) if content_for?(:head) %>
    
    <%= render "shared/cdn" %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "application", type: "module", defer: true %>
    <%= javascript_include_tag 'watchlist_navbar' %>
    <%= javascript_include_tag 'recommendations_refresh' %>
    
    <%= yield(:javascript) if content_for?(:javascript) %>
  </head>

  <body>
    <%= render "shared/navbar" %>

    <div class="container mt-4">
      <%= render "shared/alerts" %>
      <h1 aria-hidden="true" style="display: none;"><%= content_for?(:h1) ? yield(:h1) : "Welcome to Cinematch" %></h1>
      <%= yield %>
    </div>

    <!-- Popup Modal -->
    <div id="popup" class="popup" style="display:none;">
      <div class="popup-content">
        <span class="close-button" onclick="closePopup();">&times;</span>
        <div id="popup-details"></div>
      </div>
    </div>

    <div data-controller="debug"></div>
  </body>
</html>
