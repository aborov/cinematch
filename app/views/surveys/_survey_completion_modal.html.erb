<div class="modal fade" id="surveyCompletionModal" tabindex="-1" aria-labelledby="surveyCompletionModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-space-cadet">
      <div class="modal-header bg-engineering-orange text-mint-green">
        <h5 class="modal-title" id="surveyCompletionModalLabel">
          <% if @survey_type == 'basic' %>
            Basic Survey Completed!
          <% else %>
            Extended Survey Completed!
          <% end %>
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center">
        <% if @survey_type == 'basic' %>
          <div class="mb-4">
            <i class="fas fa-check-circle text-jonquil fa-3x mb-3"></i>
            <h4 class="text-jonquil">Great start!</h4>
            <p class="text-mint-green">We're generating your initial movie recommendations based on your responses.</p>
            <p class="text-tufts-blue mt-4">Want even more personalized recommendations?</p>
          </div>
          <div class="d-flex justify-content-center gap-3">
            <a href="/surveys?type=extended" class="btn btn-engineering-orange text-mint-green">
              Take Extended Survey
            </a>
            <a href="/recommendations" class="btn btn-jonquil text-space-cadet">
              Skip to Recommendations
            </a>
          </div>
        <% else %>
          <div class="mb-4">
            <i class="fas fa-star text-jonquil fa-3x mb-3"></i>
            <h4 class="text-jonquil">Excellent!</h4>
            <p class="text-mint-green">Thank you for completing the extended survey. We're analyzing your responses to provide highly personalized recommendations.</p>
          </div>
          <div class="text-center">
            <a href="/recommendations" class="btn btn-engineering-orange text-mint-green">
              View My Recommendations
            </a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 
